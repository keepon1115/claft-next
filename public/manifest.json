  },
  "shortcuts": [
    {
      "name": "クエストマップ",
      "short_name": "クエスト",
      "description": "学習クエストを開始する",
      "url": "/quest",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "プロフィール",
      "short_name": "プロフィール", 
      "description": "自分のプロフィールを表示",
      "url": "/profile",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "管理画面",
      "short_name": "管理",
      "description": "管理者ダッシュボード",
      "url": "/admin",
      "icons": [
        {
          "src": "/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+claft",
      "url": "/quest?id=%s"
    }
  ],
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
} 